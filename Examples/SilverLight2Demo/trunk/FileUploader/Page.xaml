<UserControl x:Class="FileUploader.Page"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel x:Name="spFileList">
            </StackPanel>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button x:Name="bChoose" Click="bChoose_Click" Style="{StaticResource StockButton}" 
                Content="Choose/Add Files..."/>
            <Button x:Name="bClear" Click="bClear_Click" Style="{StaticResource StockButton}" 
                Content="Clear All"/>
            <Button x:Name="bUpload" Click="bUpload_Click" Style="{StaticResource StockButton}"
                Content="Upload All"/>
        </StackPanel>
    </Grid>
</UserControl>
