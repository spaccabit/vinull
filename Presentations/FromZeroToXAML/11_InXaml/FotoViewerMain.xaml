<Window x:Class="_11_InXaml.FotoViewerMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="clr-namespace:_11_InXaml"
    Title="Foto Viewer">
    <Window.CommandBindings>
        <CommandBinding Command="l:FotoViewerMain.Exit" Executed="CommandBinding_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="l:FotoViewerMain.Exit"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Left" x:Name="sbiMessage">
                FotoViewer Ready
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <TreeView x:Name="tvPhotos" Padding="0, 0, 5, 0" SelectedItemChanged="tvPhotos_SelectedItemChanged"/>
            <Image x:Name="imgDisplayed" Grid.Column="1" Margin="15"
                   HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image.BitmapEffect>
                    <DropShadowBitmapEffect/>
                </Image.BitmapEffect>
            </Image>
        </Grid>
    </DockPanel>
</Window>
